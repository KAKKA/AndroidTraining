<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 11:45 (Yokomac) Drawable のなかに Drawable を持つ新しい Drawable を作るというノリでやっていただければ -->
    <!-- View が押された状態の Drawable -->
    <item android:state_pressed="true"><layer-list>
            <item><shape android:shape="rectangle">
                    <solid android:color="@color/Blue" />

                    <size android:height="100dp" android:width="100dp" />
                </shape></item>
            <item><shape android:shape="rectangle">
                    <solid android:color="@android:color/black" />
                    <!-- 角を丸める -->
                    <corners android:radius="50dp" />

                    <size android:height="100dp" android:width="100dp" />
                </shape></item>
        </layer-list></item>
    <item android:state_focused="true"><layer-list>
            <item><shape android:shape="rectangle">
                    <solid android:color="@android:color/black" />

                    <size android:height="100dp" android:width="100dp" />
                </shape></item>
            <item><shape android:shape="rectangle">
                    <solid android:color="@color/Blue" />
                    <!-- 角を丸める -->
                    <corners android:radius="50dp" />

                    <size android:height="100dp" android:width="100dp" />
                </shape></item>
        </layer-list></item>
    <!-- View が通常の状態の Drawable -->
    <item android:state_pressed="false"><layer-list>
            <item><shape android:shape="rectangle">
                    <solid android:color="@android:color/black" />

                    <size android:height="100dp" android:width="100dp" />
                </shape></item>
            <item><shape android:shape="rectangle">
                    <solid android:color="@color/Red" />
                    <!-- 角を丸める -->
                    <corners android:radius="50dp" />

                    <size android:height="100dp" android:width="100dp" />
                </shape></item>
        </layer-list></item>

</selector>